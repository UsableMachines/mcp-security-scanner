# MCP Security Scanner Configuration

# API Keys (choose based on AI_PROVIDER setting)

# Required for AI_PROVIDER=external-kindo or internal-kindo
# KINDO_API_KEY=your_api_key_here

# Optional - Kindo Configuration (when using Kindo providers)
# KINDO_LLM_BASE_URL=https://llm.kindo.ai/v1  # External Kindo API endpoint
# KINDO_MODEL=default                        # Kindo model selection

# Required for AI_PROVIDER=anthropic (default)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Optional - Sandbox Configuration (default: auto)
# PREFERRED_SANDBOX=auto  # Options: auto|docker|daytona (default: auto)
                          # auto = Daytona > Docker priority if both available
                          # docker = Force Docker sandbox only
                          # daytona = Force Daytona sandbox only
# DAYTONA_API_ENDPOINT=https://your-instance.com/api  # Required only for Daytona
# DAYTONA_API_KEY=your_daytona_key                    # Required only for Daytona

# Optional - AI Provider Selection (default: anthropic)
# AI_PROVIDER=anthropic  # Options: anthropic|external-kindo|internal-kindo (default: anthropic)
                        # anthropic = Direct Anthropic Claude API (requires ANTHROPIC_API_KEY)
                        # external-kindo = External Kindo API via llm.kindo.ai (requires KINDO_API_KEY)
                        # internal-kindo = Internal Kindo platform integration (requires KINDO_API_KEY)

# Optional - Scanner Configuration (defaults shown)
# SCANNER_TIMEOUT=300000        # Timeout in ms (default: 300000 = 5 minutes)
# MAX_SOURCE_CODE_SIZE=50000    # Max source code size in bytes (default: 50000 = 50KB)
# ENABLE_NETWORK_ANALYSIS=true  # Enable network behavior monitoring (default: true)

# Optional - Vulnerability Scanner Configuration. Right now the better scanner is trivy and should use this setting
VULNERABILITY_SCANNER_OSV=false
VULNERABILITY_SCANNER_TRIVY=true
VULNERABILITY_SCANNER_MODE=trivy

# Optional - Logging Configuration (defaults shown)
# LOG_LEVEL=info         # Options: debug|info|warn|error (default: info)
                         # debug = Verbose output including internal operations
                         # info = Standard operational messages
                         # warn = Warnings and non-critical errors only
                         # error = Critical errors only
# ENABLE_AI_DEBUG=false  # Enable detailed AI analysis logging (default: false)