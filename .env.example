# MCP Security Scanner Configuration

# Required - Kindo API
KINDO_API_KEY=your_api_key_here

# Optional - Kindo Configuration
KINDO_LLM_BASE_URL=https://llm.kindo.ai/v1
KINDO_MODEL=default

# Optional - Anthropic API (when AI_PROVIDER=anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Optional - Sandbox Configuration
PREFERRED_SANDBOX=auto
DAYTONA_API_ENDPOINT=https://your-instance.com/api
DAYTONA_API_KEY=your_daytona_key

# Optional - AI Provider Selection
AI_PROVIDER=anthropic

# Optional - Scanner Configuration
SCANNER_TIMEOUT=300000
MAX_SOURCE_CODE_SIZE=50000
ENABLE_NETWORK_ANALYSIS=true

# Optional - Vulnerability Scanner Configuration
VULNERABILITY_SCANNER_OSV=true
VULNERABILITY_SCANNER_TRIVY=true
VULNERABILITY_SCANNER_MODE=both

# Optional - Logging Configuration
LOG_LEVEL=info
ENABLE_AI_DEBUG=false